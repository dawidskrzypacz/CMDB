@model IEnumerable<CMDB.Models.DBEntities.Employees>
@using CMDB.ViewModels

@{
    var pager = (PagerViewModel)ViewData["Pager"];
}

<h1>Employees</h1>

<div class="d-flex justify-content-between mb-3">
    <button asp-action="Create" asp-controller="Employees" class="btn btn-primary">Create Employee</button>
    @Html.Partial("_PageSizeForm", pager)
</div>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
                <td>
                    <a href="@Url.Action("Details", new { id = employee.EmployeeID })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = employee.EmployeeID })">Edit</a> |
                    <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@employee.EmployeeID" />
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Render partial pager -->
@Html.Partial("_Pager", pager)
