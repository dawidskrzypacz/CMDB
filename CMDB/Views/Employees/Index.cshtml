@model IEnumerable<CMDB.Models.DBEntities.Employees>
@using CMDB.ViewModels

@{
    var pager = (PagerViewModel)ViewData["Pager"];
}

<h1>Employees</h1>

<div class="d-flex justify-content-between mb-3">
    <button asp-action="Create" asp-controller="Employees" class="btn btn-primary">Create Employee</button>
    @Html.Partial("_PageSizeForm", pager)
</div>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-primary">Edit</a>
                        <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.EmployeeID" class="btn btn-primary">Details</a>
                        <button data-url="@Url.Action("DeleteConfirmed", "Employees")" type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@employee.EmployeeID">Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Render partial pager -->
@Html.Partial("_Pager", pager)
