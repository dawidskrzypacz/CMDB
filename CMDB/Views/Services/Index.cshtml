@model List< CMDB.Models.DBEntities.ServicesViewModel>

@{
	ViewData["Title"] = "Services Details";
	var successMessage = TempData["successMessage"]?.ToString();
	var errorMessage = TempData["errorMessage"]?.ToString();
}

<h3>@ViewData["Title"]</h3>
@if (!string.IsNullOrWhiteSpace(successMessage))
{
	<div class="alert alert-success">
		<strong>Success! </strong>@successMessage
		<button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
	</div>

}

else if (!string.IsNullOrWhiteSpace(errorMessage))
{
	<div class="alert alert-danger">
		<strong>Error! </strong>@errorMessage
		<button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
	</div>

}
<form>
	<button asp-action="Create" asp-controller="Services" class="btn btn-primary mb-3">Create Service</button>
	<table class="table table-responsive table-hover table-bordered">
		<thead>
			<tr class="table-active">
				<th>UslugaID</th>
				<th>Nazwa</th>
				<th>Opis</th>		
				<th>DataRozpoczecia</th>
				<th>DataZakonczenia</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.Any())
			{
				@foreach (var service in Model)
				{
					<tr>
						<td>@service.ServiceID</td>

						<td>
							<div class="btnbtn-group btn-group-sm">
								<a asp-controller="Services" asp-action="Edit" asp-route-id="@service.ServiceID" class="btn btn-primary">Edit</a>
								<a asp-controller="Services" asp-action="Details" asp-route-id="@service.ServiceID" class="btn btn-primary">Details</a>
								<a asp-controller="Services" asp-action="Delete" asp-route-id="@service.ServiceID" class="btn btn-danger">Delete</a>
							</div>
						</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="6">
						<div>
							No Employees available at this moment!
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</form>