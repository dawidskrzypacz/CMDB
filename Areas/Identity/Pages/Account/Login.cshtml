@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    .login-container {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 30px rgba(0,0,0,0.3);
        padding: 20px;
    }
    .login-header {
        background: #f1efe7;
        color: #000;
        border-radius: 15px;
        padding: 15px;
        text-align: center;
        margin-bottom: 20px;
    }
    .form-floating label {
        font-weight: bold;
    }
    .btn-lg {
        padding: 10px 20px;
    }
    .checkbox label {
        font-weight: normal;
    }
</style>

<div class="d-flex justify-content-center align-items-center w-100 p-3 text-center">
    <div class="login-container">
        <div class="login-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-5">
                    <label asp-for="Input.RememberMe">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="mt-3 d-flex justify-content-between text-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

<p class="text-center mb-4">Login for admin account: admin@admin.com<br>Password for admin account: AdminPassword123!</p>
<p class="text-center">Login for user account: user@user.com<br>Password for user account: UserPassword123!</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
