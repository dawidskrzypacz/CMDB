@model CMDB.Models.DBEntities.Computers

@{
    ViewData["Title"] = "Edit Computer";
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<h1>@ViewData["Title"]</h1>
<hr />

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
    </div>
}

<form action="Edit" method="post">
    <input type="hidden" asp-for="ComputerID" />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Manufacturer</label>
        <input type="text" class="form-control" asp-for="Manufacturer" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Model</label>
        <input type="text" class="form-control" asp-for="Model" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Operating System</label>
        <input type="text" class="form-control" asp-for="OperatingSystem" />
        <span asp-validation-for="OperatingSystem" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">IP Address</label>
        <input type="text" class="form-control" asp-for="IPAddress" />
        <span asp-validation-for="IPAddress" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">RAM</label>
        <input type="text" class="form-control" asp-for="RAM" />
        <span asp-validation-for="RAM" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">CPU</label>
        <input type="text" class="form-control" asp-for="CPU" />
        <span asp-validation-for="CPU" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Storage</label>
        <input type="text" class="form-control" asp-for="Storage" />
        <span asp-validation-for="Storage" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Purchase Date</label>
        <input type="date" class="form-control" asp-for="PurchaseDate" />
        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Accessories</label>
        <input type="text" class="form-control" asp-for="Accessories" />
        <span asp-validation-for="Accessories" class="text-danger"></span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
