@model List<CMDB.Models.DBEntities.Servers>
@using CMDB.ViewModels
@{
    var pager = (PagerViewModel)ViewData["Pager"];
}

<h1>Servers</h1>

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" asp-controller="Servers" class="btn btn-primary mb-3">Create Server</a>
    @Html.Partial("_PageSizeForm", pager)
</div>
    
    <table id="animated-table" class="table table-responsive table-hover table-bordered">
        <thead>
            <tr class="table-active">
                <th>Serwer ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var server in Model)
                {
                    <tr>
                        <td>@server.ServerID</td>
                                        <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-controller="Servers" asp-action="Edit" asp-route-id="@server.ServerID" class="btn btn-primary">Edit</a>
                        <a asp-controller="Servers" asp-action="Details" asp-route-id="@server.ServerID" class="btn btn-primary">Details</a>
                        <button data-url="@Url.Action("DeleteConfirmed", "Servers")" type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@server.ServerID">Delete</button>
                    </div>
                </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">
                        <div>
                            No servers available at this moment!
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

<!-- Render partial pager -->
@Html.Partial("_Pager", pager)