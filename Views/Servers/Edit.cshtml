@model CMDB.Models.DBEntities.Servers

@{
    ViewData["Title"] = "Edit - " + @Model.Name;
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<style>
    .edit-container {
        max-width: 1000px;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 30px rgba(0,0,0,0.3);
        padding: 20px;
    }
    .edit-header {
        background: #f1efe7;
        color: #000;
        border-radius: 15px;
        padding: 15px;
        text-align: center;
    }
    .edit-body {
        padding: 20px;
    }
    .edit-label {
        font-weight: bold;
        margin-right: 10px;
        align-self: center;
        min-width: 150px; /* Adjust the width as needed */
    }
    .edit-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #e9ecef;
    }
    .edit-row:last-child {
        border-bottom: none;
    }
    .edit-footer {
        display: flex;
        justify-content: center;
        padding: 15px;
    }
</style>

<div class="d-flex justify-content-center align-items-center">
    <div class="edit-container">
        <div class="edit-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="edit-body">
            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger">
                    <strong>Error! </strong>@errorMessage
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="ServerID" />
                <div class="edit-row">
                    <label class="edit-label" for="Name">Name:</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="edit-row">
                    <label class="edit-label" for="Manufacturer">Manufacturer:</label>
                    <input type="text" class="form-control" asp-for="Manufacturer" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
                <div class="edit-row">
                    <label class="edit-label" for="Model">Model:</label>
                    <input type="text" class="form-control" asp-for="Model" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="edit-row">
                    <label class="edit-label" for="OperatingSystem">Operating System:</label>
                    <input type="text" class="form-control" asp-for="OperatingSystem" />
                    <span asp-validation-for="OperatingSystem" class="text-danger"></span>
                </div>
                <div class="edit-row">
                    <label class="edit-label" for="IPAddress">IP Address:</label>
                    <input type="text" class="form-control" asp-for="IPAddress" />
                    <span asp-validation-for="IPAddress" class="text-danger"></span>
                </div>
                <div class="edit-row">
                    <label class="edit-label" for="RAM">RAM:</label>
                    <input type="number" class="form-control" asp-for="RAM" />
                    <span asp-validation-for="RAM" class="text-danger"></span>
                </div>
                <div class="edit-row">
                    <label class="edit-label" for="CPU">CPU:</label>
                    <input type="number" class="form-control" asp-for="CPU" />
                    <span asp-validation-for="CPU" class="text-danger"></span>
                </div>
                <div class="edit-row">
                    <label class="edit-label" for="Storage">Storage:</label>
                    <input type="number" class="form-control" asp-for="Storage" />
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>
                <div class="edit-row">
                    <label class="edit-label" for="PurchaseDate">Purchase Date:</label>
                    <input type="date" class="form-control" asp-for="PurchaseDate" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>
                <div class="edit-footer">
                    <button type="submit" class="btn btn-success mx-2"><i class="fa-solid fa-floppy-disk"></i> Save</button>
                    <a asp-action="Index" class="btn btn-secondary mx-2"><i class="fa-solid fa-backward"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
